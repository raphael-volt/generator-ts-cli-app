{
	"compileOnSave": false,
	"compilerOptions": {

		"target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
		"declaration": false,
		"module": "commonjs",
		"sourceMap": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"preserveConstEnums": true,
		"lib": [
			"es2015",
			"dom"
		],
		"baseUrl": "./",
		"typeRoots": [
			"node_modules/@types",
			"node_modules"
		],
		"types": [
			"commander",
			"node",
			"mocha",
			"chai",
			"sinon"
		]
	},
	"include": [
		"src/**/*"
	]
}